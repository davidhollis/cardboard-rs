geometry {
    width 825
    height 1125
    cut 37
    safe 75
}
base {
    text {
        font family="Papyrus"
        size 8 "pt"
        foreground "black"
    }
}


background {
    solid "white"
}

// Same as "default", but in papyrus

text "{{name}}" {
    frame x=75 y=75 w=675 h=200
    font weight="black"
    size 11 "pt"
    align "center"
}

text "{{rules}}" {
    frame x=75 y=275 w=675 h=500
    align "justify"
}

text "“{{flavor}}”" {
    frame x=75 y=775 w=675 h=100
    font style="italic"
    align "right"
    only-if "{{flavor}}"
}

text "card id: {{id}}" {
    frame x=75 y=875 w=675 h=100
    style "card-id"
}
